<p>
  <strong>Location:</strong>
  <%= @report.coordinates %>
</p>

<p>
  <strong>Report Notes:</strong>
  <%= @report.notes %>
</p>

<% if current_user.id != @report.user_id %>
<p>
  <strong>User:</strong>
  <%= @report.user_id %>
</p>
<% end %>
<div class="card border-primary mb-3" style="max-width: 20rem;">
  <div class="card-header"><h4> Product Details: </h4></div>
  <div class="card-body">
  <% @report.product_detail.each do |product_detail| %>
      <dl>
        <dt>Product</dt>
          <dd><%= product_detail.product.name %></dd>
        <dt>Product Scarcity</dt>
          <dd><%= product_detail.scarcity %></dd>
        <dt>Product Price</dt>
          <dd><%= product_detail.price %></dd>
        <dt>Product Notes</dt>
          <dd><%= product_detail.notes %></dd>
      </dl>
      <hr>
  <% end %>
  </div>
</div>

<%= link_to 'Edit', edit_report_path(@report) %> |
<%= link_to 'Back', reports_path %>

