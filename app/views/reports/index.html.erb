<h2><%= t('.page_title') %></h2>

<% if @reports.length > 0 %>
  <%= link_to t('.new_report'), new_report_path %>

  <table>
    <thead>
      <tr>
        <% if @users.length != 1 %><th><%= t('.user_id') %></th><% end %>
        <th><%= t('.coordinates') %></th>
        <th><%= t('.notes') %></th>
        <th><%= t('.created_at') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @reports.each do |report| %>
        <tr>
          <% if @users.length != 1 %><td><%= report.user_id %></td><% end %>
          <td><%= report.coordinates %></td>
          <td><%= report.notes %></td>
          <td><%= report.created_at %></td>
          <td><%= link_to t('.show'), report %></td>
          <td><%= link_to t('.edit'), edit_report_path(report) %></td>
          <td><%= link_to t('.destroy'), report, method: :delete, data: { confirm: t('.confirmation') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to t('.new_report'), new_report_path %>
<% else %>
  <p><%=
    t(
      '.zero_cta.sentence_html',
      {
        link: link_to(
          t('.zero_cta.new_report'),
          new_report_path
        )
      }
    )
  %></p>
<% end %>
