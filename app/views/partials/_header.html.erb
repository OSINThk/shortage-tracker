<h1><%= link_to t('shortage_tracker'), root_path %></h1>
<nav>
  <ul>
    <% if policy(:pages).admin? %>
      <li><%= link_to t('.admin'), admin_path %></li>
    <% end %>
    <% if current_user.nil? %>
      <li><%= link_to t('.new_user_registration'), new_user_registration_path %></li>
      <li><%= link_to t('.new_user_session'), new_user_session_path %></li>
    <% else %>
      <li><%= link_to t('.new_report'), new_report_path %></li>
      <li><%= link_to t('.reports'), reports_path %></li>
      <li><%= link_to t('.destroy_user_session'), destroy_user_session_path %></li>
    <% end %>
    <li><%= link_to t('.about'), about_path %></li>
  </ul>
</nav>
<% if Rails.application.config.i18n.available_locales.length > 1 %>
  <ul>
    <% Rails.application.config.i18n.available_locales.each do |locale| %>
      <li><%= link_to t('locale', locale: locale), { :locale => locale.to_s.downcase } %></li>
    <% end %>
  </ul>
<% end %>
<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>
